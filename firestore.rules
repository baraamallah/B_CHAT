rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    match /friendRequests/{requestId} {
      // Anyone can create a request (send one).
      allow create: if request.auth != null;
      // Only the recipient of the request can update/delete it (accept/decline).
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.to;
    }
    match /conversations/{conversationId}/{document=**} {
      allow read, write: if request.auth.uid in resource.data.participants;
    }
  }
}
