
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }
    
    // Conversations
    match /conversations/{conversationId} {
      // Users can only access conversations they are a part of
      allow read, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid != null && request.auth.uid in request.resource.data.participants;
      
      // Messages within a conversation
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
    
    // Friend Requests
    match /friendRequests/{requestId} {
        // Allow users to create a request
        allow create: if request.auth.uid == request.resource.data.from;
        
        // Allow the recipient to read and update the status (accept/decline)
        allow read, update: if request.auth.uid == resource.data.to;
        
        // Allow the sender to read it to see the status
        allow read: if request.auth.uid == resource.data.from;
    }
  }
}
    