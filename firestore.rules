rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // Friend Requests
    match /friendRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.to;
      allow create: if request.auth.uid == request.resource.data.from;
      allow update, delete: if request.auth.uid == resource.data.to;
    }
    
    // Conversations and Messages
    match /conversations/{conversationId} {
      allow read, write: if request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
  }
}
